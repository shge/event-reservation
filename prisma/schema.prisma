generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model reservations {
  id            Int       @id @default(autoincrement())
  name          String
  date          String
  tickets_count Int
  status        String
  email         String
  created_at    DateTime  @default(now()) @db.Timestamptz(6)
  phone         String
  affiliation   String
  companions    String?
  notes         String?
  ip            String?
  uuid          String    @unique @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  event_name    String
  secret_words  String?
  checked_in_at DateTime? @db.Timestamptz(6)
}

model seats {
  id         Int    @id @default(autoincrement())
  event_name String
  date       String
  seats      Int

  @@unique([event_name, date])
}
